{% extends 'base.html.twig' %}

{% block title %}{{ blog.title }}{% endblock %}

{% block body %}
<main>
    <section>
        <h1>{{ blog.title }}</h1>
        <iframe width="700" height="394" src="https://www.youtube.com/embed/{{ blog.videoUrl }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <p>{{ blog.text }}</p>
        <p>Posted by: {{ blog.createdBy.username }}</p>
        <p>{{ blog.createdAt|date('Y-M-d') }}</p>
    </section>
</main>
{% endblock %}
