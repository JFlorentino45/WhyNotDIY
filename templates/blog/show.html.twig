{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
<div class="grid grid-cols-2 mx-4 mt-4">
    <div class="col-start-1 text-3xl font-medium">{{blog.title}}</div>

    <div class="col-start-2 text-xl text-right">{{ blog.createdAt|date('d-M-Y H:i') }} By: {{ blog.createdBy }}
    {% if (blog.edited) %}
        (Edited : {{ blog.editedAt|date('d-M-Y H:i') }})
    {% endif %}</div>
    <div class="col-start-1 mt-8 h-fit"><iframe class="border-gray-800 border-4 rounded-md" width="900" height="506" src="https://www.youtube.com/embed/{{ blog.videoUrl }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    {% if app.user %}
        {% include './comments/like.html.twig' %}
        {% include './comments/show.html.twig' %}
        <p><button><a class="font-sans block w-full h-full bg-gray-800 text-gray-300 hover:bg-gray-700 hover:text-white rounded-md px-3 py-2 text-sm font-medium" href="{{ path('app_blog_index') }}">Back to Home</a></button></p>
    {% endif %}
    </div>
    <div class="col-start-2 mt-8">{{ blog.text|nl2br|raw }}</div>
</div>
{% endblock %}
