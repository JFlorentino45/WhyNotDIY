{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>UserName</th>
                <td>{{ user.userName }}</td>
            </tr>
            <tr>
                <th>EmailAddress</th>
                <td>{{ user.emailAddress }}</td>
            </tr>
        </tbody>
    </table>

    <button><a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a></button>
    <button><a href="{{ path('app_change_password') }}">Change Password</a></button>

    {{ include('user/_delete_form.html.twig') }}

    <button><a href="{{ path('app_blog_index') }}">back to list</a></button>
{% endblock %}
