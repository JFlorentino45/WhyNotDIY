{% block body %}
    <h3>Add a comment</h3>
        {{ include('comments/_form.html.twig', {'button_label': 'Add Comment'}) }}
    {% if blog.comments is empty %}
        <h2>No Comments</h2>
    {% else %}
        <h2>Comments</h2>
        {% for comment in comments %}
            <div>{% if comment.getCreatedBy() == blog.getCreatedBy() %}
            <p>OP - 
            {% endif %}
            {{ comment.getCreatedBy() }} on {{ comment.getCreatedAt()|date('d-M-Y H:i') }}
            {% if comment.edited() and comment.getCreatedAt()|date('d-M-Y H:i') != comment.getEditedAt()|date('d-M-Y H:i') %}
                (Edited : {{ comment.getEditedAt|date('d-M-Y H:i') }})
            {% endif %}:</p>
            <p>{{ comment.getText()|nl2br|raw }}</p>
            {% if app.user == comment.getCreatedBy() %}
            <button><a href="{{ path('app_comments_edit', {'id': comment.id}) }}">Edit Comment</a></button>
            {{ include('comments/_delete_form.html.twig') }}
            {% endif %}</div>
        {% endfor %}
    {% endif %}
{% endblock %}
